{
  "name": "tickeroo",
  "displayName": "Tickeroo",
  "description": "Automatically track working time on local projects inside VS Code.",
  "version": "0.0.15",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tickeroo.startTimer",
        "title": "Start Timer"
      },
      {
        "command": "tickeroo.startTimerOutsideWorkspace",
        "title": "Start Timer (Other Project)"
      },
      {
        "command": "tickeroo.stopTimer",
        "title": "Stop Timer"
      },
      {
        "command": "tickeroo.switchTask",
        "title": "Switch Task"
      },
      {
        "command": "tickeroo.showReport",
        "title": "Show Report"
      },
      {
        "command": "tickeroo.showCurrentProjectReport",
        "title": "Show Report (Current Project)"
      },
      {
        "command": "tickeroo.showAllProjectsReport",
        "title": "Show Report (All Projects)"
      },
      {
        "command": "tickeroo.showStatusMenu",
        "title": "Tickeroo: Status Menu"
      },
      {
        "command": "tickeroo.refreshProjects",
        "title": "Refresh Projects",
        "icon": "$(refresh)"
      },
      {
        "command": "tickeroo.renameProject",
        "title": "Rename Project"
      },
      {
        "command": "tickeroo.showProjectReport",
        "title": "Show Report"
      },
      {
        "command": "tickeroo.startForProject",
        "title": "Start Timer for Project"
      },
      {
        "command": "tickeroo.stopForProject",
        "title": "Stop Timer for Project"
      },
      {
        "command": "tickeroo.showActiveProjectMenu",
        "title": "Show Active Project Menu"
      },
      {
        "command": "tickeroo.addManualEntry",
        "title": "Add Manual Time Entry"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tickeroo",
          "title": "Tickeroo",
          "icon": "resources/clock.svg"
        }
      ]
    },
    "views": {
      "tickeroo": [
        {
          "id": "tickeroo.projects",
          "name": "Projects"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "tickeroo.refreshProjects",
          "when": "view == tickeroo.projects",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "tickeroo.showProjectReport",
          "when": "view == tickeroo.projects && viewItem == project",
          "group": "1_report"
        },
        {
          "command": "tickeroo.renameProject",
          "when": "view == tickeroo.projects && viewItem == project",
          "group": "2_manage"
        },
        {
          "command": "tickeroo.showProjectReport",
          "when": "view == tickeroo.projects && viewItem == project-active",
          "group": "1_report"
        },
        {
          "command": "tickeroo.renameProject",
          "when": "view == tickeroo.projects && viewItem == project-active",
          "group": "2_manage"
        },
        {
          "command": "tickeroo.addManualEntry",
          "when": "view == tickeroo.projects && viewItem == project",
          "group": "3_actions"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.60.0",
    "typescript": "^4.9.0",
    "@vscode/test-electron": "^2.3.0"
  }
}